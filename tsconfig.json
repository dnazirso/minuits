{
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "webpack",
    "src/view",
    "src/index.ts",
    "src/theme.ts"
  ]
}
